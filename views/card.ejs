<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Cards</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-semibold text-gray-700 text-center mb-8">User Profiles</h2>
    
    <!-- Responsive Grid for Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    
      
      <!-- Sample Card 4 -->

      <% if(users.length>0){ %>
        <% users.forEach(user=> { %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              <%= user.name%>
            </h3>
            <p class="text-gray-600"><strong>Age:</strong>
              <%= user.age%></p>
            <p class="text-gray-600"><strong>Email:</strong>
              <%= user.email %></p>
              <div class="mt-3">
                <a class="text-red-800" href="/delete/<%=user._id%>">delete</a>
                <a class="text-blue-800" href="/update/<%= user._id %>">update</a>

              </div>
          </div>
     <%   })  %>
      <% } else{ %>
        <h3 class="opacity-50">no cards here</h3>
      <% } %>
     
     
      
      <!-- Add more cards as needed -->

    </div>
  </div>
</body>
</html>
